@using Microsoft.AspNetCore.Http;

@{ 
    int count = 0;

    // This will GET the Session Variable
    var myCount = Context.Session.GetInt32("MyCount");
    if (myCount != null)
    {
        count = myCount.Value;
        count++;
    }

    // This will SET and update the Session Variable   
    Context.Session.SetInt32("MyCount", count);
}
<p>Session Count: @Context.Session.GetInt32("MyCount")</p>