@model IEnumerable<HelloWorld.Models.Product>

@{
    ViewData["MyLittleTitle"] = "MyProducts";
    Layout = "_BasicLayout";
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Products</title>
</head>

<body>
    @if (Model.Count() > 0)
    {
        <table>
            @foreach (var product in Model)
            {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>

                <td>
                    @switch (product.ProductCount) // add another cell for stock count
                    {
                        case 0:
                            @:Out of stock
                            break;
                        case 1:
                            <p>Low Stock</p>
                            break;
                        default:
                            <text>@string.Format("{0} items", product.ProductCount)</text>
                            break;
                    }
                </td>


            </tr>
            }
        </table>
    }
    else
    {
        <h2>No product data found.</h2>
    }
</body>
</html>